<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">

    <description>
      SecurIA Web Application
    </description>
    <display-name>SecurIA</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>logic.ProjectInit</listener-class>
    </listener>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>delete_account</servlet-name>
        <servlet-class>servlets.DeleteAccountServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>request_contact</servlet-name>
        <servlet-class>servlets.ContactServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>get_settings</servlet-name>
        <servlet-class>servlets.GetSettingsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>set_settings</servlet-name>
        <servlet-class>servlets.SetSettingsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>admin_sql</servlet-name>
        <servlet-class>servlets.AdminSQLServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>gallery</servlet-name>
        <servlet-class>servlets.GetImagesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>delete_image</servlet-name>
        <servlet-class>servlets.DeleteImageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>streaming</servlet-name>
        <servlet-class>servlets.GetStreamFrameServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>get_alerts</servlet-name>
        <servlet-class>servlets.GetAlertsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>delete_alert</servlet-name>
        <servlet-class>servlets.DeleteAlertServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>delete_account</servlet-name>
        <url-pattern>/delete_account</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>request_contact</servlet-name>
        <url-pattern>/request_contact</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>get_settings</servlet-name>
        <url-pattern>/get_settings</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>set_settings</servlet-name>
        <url-pattern>/set_settings</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>admin_sql</servlet-name>
        <url-pattern>/admin_sql</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>gallery</servlet-name>
        <url-pattern>/gallery</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>delete_image</servlet-name>
        <url-pattern>/delete_image</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>streaming</servlet-name>
        <url-pattern>/streaming</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>get_alerts</servlet-name>
        <url-pattern>/get_alerts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>delete_alert</servlet-name>
        <url-pattern>/delete_alert</url-pattern>
    </servlet-mapping>
</web-app>